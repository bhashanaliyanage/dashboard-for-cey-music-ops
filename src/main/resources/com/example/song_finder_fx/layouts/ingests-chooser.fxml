<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="1000.0" prefWidth="750.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.song_finder_fx.ControllerIngest">
   <HBox>
      <VBox.margin>
         <Insets left="30.0" top="30.0" />
      </VBox.margin>
      <Label layoutX="10.0" layoutY="10.0" text="Generate Ingest">
         <font>
            <Font name="Segoe UI Semibold" size="28.0" />
         </font>
      </Label>
   </HBox>
   <ScrollPane fx:id="scrlpneMain" hbarPolicy="NEVER" prefWidth="460.0" stylesheets="@../styles.css" vbarPolicy="NEVER">
      <Pane prefHeight="928.0" prefWidth="744.0">
         <VBox layoutX="30.0" layoutY="30.0" maxWidth="688.0" prefWidth="688.0" styleClass="textarea-bg" stylesheets="@../styles.css">
            <HBox>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <VBox HBox.hgrow="ALWAYS">
                  <Label text="Choose Ingest Type">
                     <font>
                        <Font name="Segoe UI Semibold" size="19.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </Label>
                  <Label text="(Chose ingest type and add to ingest queue to generate ingest)" textFill="#656565">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </Label>
               </VBox>
            </HBox>
            <VBox prefWidth="100.0">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
               </VBox.margin>
               <Button mnemonicParsing="false" onAction="#onIngestSingle" prefHeight="30.0" prefWidth="646.0" styleClass="button_inside" text="Create Ingest for Single Song and add to Queue" />
               <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onIngestAlbum" prefHeight="30.0" prefWidth="646.0" styleClass="button_inside" text="Create Ingest for Album and add to Queue">
                  <VBox.margin>
                     <Insets top="15.0" />
                  </VBox.margin>
               </Button>
            </VBox>
         </VBox>
         <VBox fx:id="vboxIngest" layoutX="30.0" layoutY="232.0" styleClass="textarea-bg" />
      </Pane>
   </ScrollPane>
</VBox>