<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox styleClass="textarea-bg" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.song_finder_fx.UIControllers.ControllerMCLEntry">
   <children>
      <HBox fx:id="hboxEntry" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" prefHeight="30.0" stylesheets="@../../styles.css">
         <CheckBox fx:id="checkBox" mnemonicParsing="false">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </CheckBox>
         <Label fx:id="lblSongNo" minWidth="20.0" text="01.">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </Label>
         <Label fx:id="lblSongName" layoutX="49.0" layoutY="17.0" minWidth="300.0" prefHeight="17.0" prefWidth="300.0" text="Song Name">
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin>
         </Label>
         <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="C:" />
            <Label fx:id="lblComposer" maxWidth="120.0" minWidth="120.0" text="Composer Name" />
            <Label text="L:" />
            <Label fx:id="lblLyricist" maxWidth="120.0" minWidth="120.0" text="Lyricist Name" />
            <ImageView fitHeight="18.0" fitWidth="15.0" onMouseClicked="#onEdit" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
               <Image url="@../../images/pencil%201.png" />
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </HBox>
      </HBox>
   </children>
</VBox>
