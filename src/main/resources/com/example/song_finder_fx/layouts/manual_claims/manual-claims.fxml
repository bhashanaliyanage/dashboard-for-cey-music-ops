<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<VBox prefWidth="750.0" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.song_finder_fx.ControllerManualClaims">
    <HBox>
        <VBox.margin>
            <Insets left="30.0" top="30.0" />
        </VBox.margin>
        <Label layoutX="10.0" layoutY="10.0" onMouseClicked="#onGoBack" text="Manual Claims" textFill="#656565">
           <font>
               <Font name="Segoe UI Semibold" size="28.0" />
           </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Label>
      <Label layoutX="10.0" layoutY="10.0" text="&gt; Add Manual Claim">
         <font>
            <Font name="Segoe UI Semibold" size="28.0" />
         </font>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Label>
    </HBox>
   <ScrollPane fx:id="scrlpneMain" hbarPolicy="NEVER" prefWidth="460.0" stylesheets="@../../styles.css" vbarPolicy="NEVER">
      <Pane prefWidth="744.0">
         <VBox layoutX="30.0" layoutY="30.0" maxWidth="688.0" prefWidth="688.0" styleClass="textarea-bg" stylesheets="@../../styles.css">
            <VBox>
               <Label text="Add Manual Claim">
                  <font>
                     <Font name="Segoe UI Semibold" size="19.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="DEFAULT" />
                  </cursor>
               </Label>
               <Label text="(Video previews are disabled for copyrighted content)" textFill="#656565">
                  <cursor>
                     <Cursor fx:constant="DEFAULT" />
                  </cursor>
               </Label>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </VBox>
            <HBox prefWidth="200.0" spacing="10.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <VBox HBox.hgrow="ALWAYS">
                  <VBox spacing="5.0">
                     <Label text="Link:" textFill="#656565"/>
                     <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <TextField fx:id="txtURL" onAction="#urlOnAction" prefHeight="30.0"
                                   promptText="https://www.youtube.com/watch?v=&lt;id&gt;"
                                   styleClass="textarea-bg" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnAddToList" graphicTextGap="5.0" minHeight="30.0" mnemonicParsing="false"
                                onAction="#onCheckBtnClicked" prefHeight="30.0" styleClass="button_inside"
                                stylesheets="@../../styles.css" text="Search">
                           <graphic>
                              <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true"
                                         preserveRatio="true">
                                 <Image url="@../../images/icon%20_search%20normal%201_.png"/>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="btnDownload" graphicTextGap="5.0" layoutX="418.0" layoutY="10.0"
                                minHeight="30.0" mnemonicParsing="false" onAction="#onDownload" prefHeight="30.0"
                                styleClass="button_inside" stylesheets="@../../styles.css" text="Download">
                           <graphic>
                              <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true"
                                         preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icon%20_document%20download_.png"/>
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </HBox>
                  </VBox>
               </VBox>
               <Separator orientation="VERTICAL" prefHeight="50.0" />
               <VBox spacing="5.0">
                  <children>
                     <Label text="Claim Type:" textFill="#656565" />
                     <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="5.0">
                        <children>
                           <ComboBox fx:id="comboClaimType" prefHeight="30.0" prefWidth="200.0" promptText="Claim Type" HBox.hgrow="ALWAYS" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </HBox>
            <WebView fx:id="ytPlayer" minHeight="-1.0" minWidth="-1.0" prefHeight="370.0" prefWidth="-1.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" />
               </VBox.margin>
            </WebView>
            <VBox fx:id="vboxTracks">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
            </VBox>
            <Button fx:id="btnAddClaim" mnemonicParsing="false" onAction="#onAddManualClaim" prefHeight="30.0" prefWidth="687.0" styleClass="button_inside_brown" text="Add Manual Claim">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
            </Button>
         </VBox>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </Pane>
   </ScrollPane>
</VBox>
