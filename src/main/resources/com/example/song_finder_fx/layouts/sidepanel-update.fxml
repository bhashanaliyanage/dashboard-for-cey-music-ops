<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="1000.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
      <VBox.margin>
         <Insets top="50.0" />
      </VBox.margin>
      <Image url="@../images/cloud-download.png" />
   </ImageView>
   <VBox alignment="CENTER" prefWidth="100.0" VBox.vgrow="ALWAYS">
      <Label text="Update Available">
         <font>
            <Font name="Segoe UI Semibold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="lblVersion" text="Version">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
   </VBox>
   <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#onUpdateBtnClick" prefHeight="30.0" prefWidth="100.0" styleClass="button_inside" stylesheets="@../styles.css" text="Update">
      <VBox.margin>
         <Insets bottom="30.0" />
      </VBox.margin>
   </Button>
</VBox>
