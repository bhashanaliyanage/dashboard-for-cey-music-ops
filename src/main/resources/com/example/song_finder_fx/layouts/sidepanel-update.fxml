<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="1000.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
      <VBox.margin>
         <Insets top="50.0" />
      </VBox.margin>
      <Image url="@../images/cloud-download.png" />
   </ImageView>
   <VBox alignment="CENTER" prefWidth="100.0" VBox.vgrow="ALWAYS">
      <Label text="Update Available">
         <font>
            <Font name="Segoe UI Semibold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="lblVersion" text="Version">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
   </VBox>
   <Button mnemonicParsing="false" onAction="#onUpdateBtnClick" prefHeight="30.0" prefWidth="100.0" styleClass="button_inside_brown" stylesheets="@../styles.css" text="Update">
      <VBox.margin>
         <Insets bottom="30.0" />
      </VBox.margin>
   </Button>
</VBox>
