<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="750.0" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.song_finder_fx.ControllerUPCGenerator">
    <HBox>
        <VBox.margin>
            <Insets left="30.0" top="30.0" />
        </VBox.margin>
        <Label layoutX="10.0" layoutY="10.0" text="Identifiers" textFill="#656565">
           <font>
               <Font name="Segoe UI Semibold" size="28.0" />
           </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Label>
      <Label layoutX="10.0" layoutY="10.0" text="&gt; UPC Generator">
         <font>
            <Font name="Segoe UI Semibold" size="28.0" />
         </font>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Label>
    </HBox>
   <ScrollPane fx:id="scrlpneMain" hbarPolicy="NEVER" prefWidth="460.0" stylesheets="@../../styles.css" vbarPolicy="NEVER">
      <Pane prefWidth="744.0">
         <VBox layoutX="30.0" layoutY="30.0" maxWidth="688.0" prefWidth="688.0" styleClass="textarea-bg" stylesheets="@../../styles.css">
            <VBox>
               <Label text="UPC Generator">
                  <font>
                     <Font name="Segoe UI Semibold" size="19.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="DEFAULT" />
                  </cursor>
               </Label>
               <Label fx:id="lblUPCCount" text="Available UPC Count" textFill="#656565">
                  <cursor>
                     <Cursor fx:constant="DEFAULT" />
                  </cursor>
               </Label>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </VBox>
            <HBox prefWidth="200.0" spacing="10.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <HBox alignment="BOTTOM_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                  <VBox>
                     <Label text="Cout:" textFill="#656565">
                        <VBox.margin>
                           <Insets bottom="5.0"/>
                        </VBox.margin>
                     </Label>
                     <Spinner fx:id="upcSpinner" editable="true" prefHeight="30.0"/>
                  </VBox>
                  <Button fx:id="btnGenerateUPC" mnemonicParsing="false" onAction="#onGenerateUPCs" prefHeight="30.0"
                          styleClass="button_inside_brown" text="Generate UPCs"/>
               </HBox>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
               </VBox.margin>
               <Label fx:id="lblUPCCount1" text="Generated UPCs" textFill="#656565">
                  <cursor>
                     <Cursor fx:constant="DEFAULT"/>
                  </cursor>
                  <VBox.margin>
                     <Insets bottom="5.0"/>
                  </VBox.margin>
               </Label>
               <TextArea fx:id="textAreaUPC" prefHeight="200.0" prefWidth="200.0"
                         promptText="Select count and click generate to generate UPCs" styleClass="textarea-bg"/>
               <HBox spacing="10.0">
                  <VBox.margin>
                     <Insets top="10.0"/>
                  </VBox.margin>
                  <Button fx:id="btnUndo" mnemonicParsing="false" onAction="#onUndo" prefHeight="30.0"
                          styleClass="button_inside_brown" text="Undo/Rollback Generated UPCs"/>
                  <Button fx:id="btnSave" disable="true" mnemonicParsing="false" prefHeight="30.0"
                          styleClass="button_inside_brown" text="Save/ Assign Fetched UPCs"/>
               </HBox>
            </VBox>
         </VBox>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </Pane>
   </ScrollPane>
</VBox>
