<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="890.0" prefWidth="750.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.song_finder_fx.ControllerAddReport">
    <HBox>
        <VBox.margin>
            <Insets left="30.0" top="30.0" />
        </VBox.margin>
        <Label layoutX="10.0" layoutY="10.0" text="Add New Report">
           <font>
               <Font name="Segoe UI Semibold" size="28.0" />
           </font>
        </Label>
    </HBox>
   <ScrollPane fx:id="scrlpneMain" hbarPolicy="NEVER" prefWidth="460.0" stylesheets="@../styles.css" vbarPolicy="NEVER">
      <Pane prefHeight="820.0" prefWidth="744.0">
         <VBox layoutX="30.0" layoutY="30.0" maxWidth="688.0" prefWidth="688.0" styleClass="textarea-bg" stylesheets="@../styles.css">
            <HBox>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <VBox HBox.hgrow="ALWAYS">
                  <Label text="Select Dates">
                     <font>
                        <Font name="Segoe UI Semibold" size="19.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </Label>
                  <Label text="(Month, Year)">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </Label>
               </VBox>
            </HBox>
            <HBox spacing="10.0">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="30.0"/>
               </VBox.margin>
               <VBox spacing="10.0">
                  <Label text="Month" textFill="#656565"/>
                  <ComboBox fx:id="comboMonth" prefWidth="330.0" promptText="Month" VBox.vgrow="ALWAYS"/>
               </VBox>
               <VBox layoutX="10.0" layoutY="10.0" spacing="10.0" HBox.hgrow="ALWAYS">
                  <Label text="Year" textFill="#656565"/>
                  <TextField fx:id="txtYear" promptText="YYYY" styleClass="textarea-bg"/>
               </VBox>
            </HBox>
         </VBox>
         <VBox layoutX="30.0" layoutY="215.0" maxWidth="688.0" prefWidth="688.0" styleClass="textarea-bg" stylesheets="@../styles.css">
            <children>
               <HBox>
                  <children>
                     <VBox HBox.hgrow="ALWAYS">
                        <children>
                           <Label text="Import Report">
                              <font>
                                 <Font name="Segoe UI Semibold" size="19.0" />
                              </font>
                              <cursor>
                                 <Cursor fx:constant="DEFAULT" />
                              </cursor>
                           </Label>
                           <Label text="(*.csv)">
                              <cursor>
                                 <Cursor fx:constant="DEFAULT" />
                              </cursor>
                           </Label>
                        </children>
                     </VBox>
                     <Button mnemonicParsing="false" onAction="#onLoadReport" prefHeight="30.0" prefWidth="100.0" styleClass="button_inside_brown" text="Browse">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Button>
                  </children>
                  <VBox.margin>
                     <Insets left="20.0" right="20.0" top="20.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER_LEFT">
                  <children>
                     <Label fx:id="lblImport" text="Click Browse Button to Begin Import Process" textFill="#656565" />
                     <ImageView fx:id="imgImportCaution" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" visible="false">
                        <image>
                           <Image url="@../images/done.png" />
                        </image>
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </ImageView>
                     <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                        <children>
                           <Label fx:id="lblReportProgress" text="Import Progress" visible="false" />
                        </children>
                     </HBox>
                  </children>
                  <VBox.margin>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
                  </VBox.margin>
               </HBox>
            </children>
         </VBox>
         <HBox fx:id="hboxMissingAssets" disable="true" layoutX="30.0" layoutY="365.0" prefHeight="100.0" prefWidth="688.0" spacing="10.0">
            <children>
               <VBox prefHeight="100.0" styleClass="clickable-pane-bg" HBox.hgrow="ALWAYS">
                  <children>
                     <HBox prefWidth="270.0" styleClass="textarea-bg" stylesheets="@../styles.css">
                        <children>
                           <Label prefHeight="50.0" text="Missing Payees" HBox.hgrow="ALWAYS">
                              <font>
                                 <Font name="Segoe UI Semibold" size="14.0" />
                              </font>
                              <cursor>
                                 <Cursor fx:constant="DEFAULT" />
                              </cursor>
                              <HBox.margin>
                                 <Insets left="20.0" />
                              </HBox.margin>
                           </Label>
                           <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                              <HBox.margin>
                                 <Insets left="20.0" right="20.0" />
                              </HBox.margin>
                              <children>
                                 <Label fx:id="lblMissingPayees" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="50.0" text="-" textAlignment="RIGHT">
                                    <cursor>
                                       <Cursor fx:constant="DEFAULT" />
                                    </cursor>
                                 </Label>
                              </children>
                           </HBox>
                        </children>
                     </HBox>
                     <VBox alignment="CENTER" onMouseClicked="#onExportPayeesClick" VBox.vgrow="ALWAYS">
                        <children>
                           <Label text="Click to Export CSV" />
                        </children>
                     </VBox>
                  </children>
               </VBox>
               <VBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" styleClass="clickable-pane-bg" HBox.hgrow="ALWAYS">
                  <children>
                     <HBox prefWidth="270.0" styleClass="textarea-bg" stylesheets="@../styles.css">
                        <children>
                           <Label prefHeight="50.0" text="Missing ISRCs" HBox.hgrow="ALWAYS">
                              <font>
                                 <Font name="Segoe UI Semibold" size="14.0" />
                              </font>
                              <cursor>
                                 <Cursor fx:constant="DEFAULT" />
                              </cursor>
                              <HBox.margin>
                                 <Insets left="20.0" />
                              </HBox.margin>
                           </Label>
                           <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                              <HBox.margin>
                                 <Insets left="20.0" right="20.0" />
                              </HBox.margin>
                              <children>
                                 <Label fx:id="lblMissingISRCs" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="50.0" text="-" textAlignment="RIGHT">
                                    <cursor>
                                       <Cursor fx:constant="DEFAULT" />
                                    </cursor>
                                 </Label>
                              </children>
                           </HBox>
                        </children>
                     </HBox>
                     <VBox alignment="CENTER" onMouseClicked="#onExportISRCsClick" VBox.vgrow="ALWAYS">
                        <children>
                           <Label text="Click to Export CSV" />
                        </children>
                     </VBox>
                  </children>
               </VBox>
            </children>
         </HBox>
      </Pane>
   </ScrollPane>
</VBox>
