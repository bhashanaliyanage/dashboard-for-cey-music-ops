<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="856.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.song_finder_fx.UIController">
    <center>
        <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="650.0" prefHeight="444.0"
              BorderPane.alignment="CENTER">
            <VBox spacing="5.0" styleClass="white-background" stylesheets="@styles.css" VBox.vgrow="ALWAYS">
                <Label text="Search Audios">
                    <font>
                        <Font name="Segoe UI Semibold" size="28.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="30.0" top="30.0"/>
                    </VBox.margin>
                </Label>
                <Label layoutX="40.0" layoutY="40.0" text="Location">
                    <VBox.margin>
                        <Insets left="31.0" top="30.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="Segoe UI Semibold" size="12.0"/>
                    </font>
                </Label>
                <Button fx:id="btnAudioDatabase" alignment="BASELINE_LEFT" minHeight="64.0" minWidth="600.0"
                        onAction="#onBrowseAudioButtonClick" styleClass="button-big" stylesheets="@styles.css"
                        text="Browse for Audio Database Location">
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets left="30.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="Segoe UI Semilight" size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="btnDestination" alignment="BASELINE_LEFT" layoutX="40.0" layoutY="40.0" minHeight="64.0" minWidth="600.0"
                        onAction="#onBrowseDestinationButtonClick" styleClass="button-big" stylesheets="@styles.css"
                        text="Browse for Destination:">
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                    <font>
                        <Font name="Segoe UI Semilight" size="14.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="30.0"/>
                    </VBox.margin>
                </Button>
                <Label layoutX="41.0" layoutY="115.0" text="Audios">
                    <VBox.margin>
                        <Insets left="31.0" top="30.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="Segoe UI Semibold" size="12.0"/>
                    </font>
                </Label>
                <VBox minWidth="600.0" styleClass="textarea-bg" stylesheets="@styles.css">
                    <VBox.margin>
                        <Insets left="30.0" right="30.0"/>
                    </VBox.margin>
                    <TextArea fx:id="textArea" maxHeight="100.0" prefColumnCount="50" promptText="Enter ISRCs"
                              styleClass="textarea-bg" stylesheets="@styles.css">
                        <VBox.margin>
                            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                        </VBox.margin>
                        <font>
                            <Font name="Segoe UI Semilight" size="12.0"/>
                        </font>
                    </TextArea>
                </VBox>
                <HBox alignment="CENTER_RIGHT" minWidth="600.0" prefHeight="76.0" prefWidth="485.0"
                      styleClass="textarea-bg" stylesheets="@styles.css">
                    <VBox.margin>
                        <Insets left="30.0" right="30.0"/>
                    </VBox.margin>
                    <VBox alignment="CENTER_LEFT" prefHeight="74.0" prefWidth="350.0">
                        <Label text="Search and collect audios">
                            <font>
                                <Font name="Segoe UI Semilight" size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="30.0"/>
                            </VBox.margin>
                        </Label>
                    </VBox>

                    <Button fx:id="btnProceed" minHeight="34.0" minWidth="220.0" onAction="#onProceedButtonClick"
                            styleClass="button_inside" stylesheets="@styles.css" text="Proceed">
                        <font>
                            <Font name="Segoe UI Semilight" size="14.0"/>
                        </font>
                        <HBox.margin>
                            <Insets bottom="20.0" right="30.0" top="20.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </VBox>

        </VBox>
    </center>
    <left>
        <VBox minWidth="246.0" prefHeight="600.0" prefWidth="213.0" spacing="5.0" styleClass="white-background"
              stylesheets="@styles.css" BorderPane.alignment="CENTER">
            <Button alignment="BASELINE_LEFT" minHeight="34.0" minWidth="225.0" mnemonicParsing="false"
                    prefHeight="34.0" prefWidth="223.0" text="Search Audios">
                <VBox.margin>
                    <Insets left="20.0" top="20.0"/>
                </VBox.margin>
                <padding>
                    <Insets left="20.0"/>
                </padding>
                <font>
                    <Font name="Segoe UI Light" size="14.0"/>
                </font>
            </Button>
            <Button alignment="BASELINE_LEFT" layoutX="30.0" layoutY="60.0" minHeight="34.0" minWidth="225.0"
                    mnemonicParsing="false" text="Search by ISRC">
                <padding>
                    <Insets left="20.0"/>
                </padding>
                <font>
                    <Font name="Segoe UI Light" size="14.0"/>
                </font>
                <VBox.margin>
                    <Insets left="20.0"/>
                </VBox.margin>
            </Button>
            <Button alignment="BASELINE_LEFT" layoutX="30.0" layoutY="149.0" minHeight="34.0" minWidth="225.0"
                    mnemonicParsing="false" onAction="#onUpdateDatabaseButtonClick" text="Update File Names">
                <padding>
                    <Insets left="20.0"/>
                </padding>
                <font>
                    <Font name="Segoe UI Light" size="14.0"/>
                </font>
                <VBox.margin>
                    <Insets left="20.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </left>
</BorderPane>
